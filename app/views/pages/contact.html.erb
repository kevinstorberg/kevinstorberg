
  <div class="center-content container">
    <div id="contact-form">
      <form action="https://formspree.io/kevin@storberg.net" method="POST">
            <input id="contact-name" type="text" name="name" placeholder="Your Name" ></br>
            <input id="contact-email" type="email" name="_replyto" placeholder="Your E-Mail"></br>
            <input id="contact-phone" type="phone" name="number" placeholder="Your Number"></br>
            <textarea id="contact-message" type="message" name="message" placeholder="Your Message"></textarea></br>
          <input id="contact-submit" type="submit" value="Send">
      </form>
    </div>
  </div>

<script>

  $(document).ready(function() {

      // Contact Form ================================================================
      $('#contact-submit').click(function(e) {
        var name = $('#contact-name').val();
        var email = $('#contact-email').val();
        var phone = $('#contact-phone').val();
        if (name == '' || email == '' || phone == '') {
          e.preventDefault();
            if (name == '') {
               $("#contact-name").css('border', "2px solid red");
            }

            if (email == '') {
               $("#contact-email").css('border', "2px solid red");
            }

            if (phone == '') {
               $("#contact-phone").css('border', "2px solid red");
            }

            };
        });

  });

</script>
