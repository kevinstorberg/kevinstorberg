
<% if current_admin == kevin %>

<div class="container">
  <div class="row">

    <div class="col-sm-6">
      <div id="project-form">
        <h1>Projects</h1></br>
        <%= form_for @project do |f| %>
          <div class="field">
            <%= f.text_field :title, class: "title-field", placeholder: "Title"  %>
          </div>
          <div class ="field">
            <%= f.text_field :body, class: "body-field", placeholder: "Body" %>
          </div>
          <%= f.fields_for :picture do |ff| %>
          <div class="field">
            <%= ff.file_field :image, class: "image-field" %>
          </div>
          <% end %>
          <div class="actions">
            <%= f.submit%>
          </div>
        <% end %>
      </div> <!-- Projects Form -->
    </div><!-- Column -->

    <div class="col-sm-6">
      <div id="blog-form">
        <h1>Blogs</h1></br>
        <%= form_for @blog do |f| %>
          <div class="field">
            <%= f.text_field :title, class: "title-field", placeholder: "Title" %>
          </div>
          <div class="field">
            <%= f.text_field :body, class: "body-field", placeholder: "Body"  %>
          </div>
          <%= f.fields_for :picture do |ff| %>
          <div class="field">
            <%= ff.file_field :image, class: "image-field" %>
          </div>
          <% end %>
          <div class="actions">
            <%= f.submit %>
          </div>
        <% end %>
      </div><!-- Blog Form -->
    </div><!-- Column -->

  </div><!-- Row -->
</div><!-- Container -->

<% end %>
